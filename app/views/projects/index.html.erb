<h1>My Projects</h1>

<%= link_to 'Create New Project', new_project_path, class: "tiny button radius secondary" %>

<% @projects.each do |project| %>
<div class="project">
  <strong><%= project.name %></strong>
  <p><%= project.description %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(project.created_at) + " ago", project %>
      <span class="admin">
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
      </span>
    </div>
</div>


<% end %>


<br>


