<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

  <!-- adding in the foundation header below -->

  <div class="contain-to-grid sticky">

  <nav class="top-bar">
  <ul class="title-area">
    
    <!-- Title Area -->
    <li class="name">
      <h1><a href="projects">LOOPLIST</a></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  
  </ul>
  
  <section class="top-bar-section">
    
    <!-- Left Nav Section -->
    <ul class="left">
      <li class="divider"></li>
      <li class="active"><a href="projects">Projects</a></li>
      <li class="divider"></li>
      <li class="active"><a href="#">About Us</a></li>
      <li class="divider"></li>
    </ul>
    
    <!-- Right Nav Section -->
    <ul class="right">
      
      <!-- Signed In -->
      <% if user_signed_in? %>
          <!-- Link to Edit --> 
          <li class="divider"></li>
          <li><%= link_to current_user.email, "/users/edit" %></li>
          <!-- Link to Signout (NOT WORKING) -->
          <li class="divider"></li>
          <li><%= link_to "Log Out", "/users/sign_out", method: :delete %></li>
          <li class="divider"></li>
      <!-- Guest User -->
      <% else %>
          <li class="divider"></li>
          <li><%= link_to "Login", "/users/sign_in" %></li>
          <li class="divider"></li>
          <li><%= link_to "Register", "/users/sign_up" %></li>
          <li class="divider"></li>
      <% end %>

    </ul>
  </section>
  </nav>

  </div>

  <!-- adding in code from the devise gem per devise docs -->
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <!-- adding in foundation grid below -->

    <div class="row">
     <div class="large-8 columns"><%= yield %></div>
      </div>
    </div>

    
    <%= javascript_include_tag "application" %>
  </body>
</html>
